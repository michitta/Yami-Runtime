<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<!-- DrLeonardo refactor -->

<Pane fx:id="notificationPane" prefHeight="80.0" prefWidth="280.0" styleClass="blocks" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Отступы-->
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

   <!-- Текст уведомления-->
   <Text id="notificationHeading" fontSmoothingType="LCD" layoutX="30.0" layoutY="38.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-font-head" text="%runtime.scenes.components.notification.notificationHeading" textAlignment="CENTER" wrappingWidth="219.7" />
   <Text id="notificationText" fontSmoothingType="LCD" layoutX="30.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-font-desc" text="%runtime.scenes.components.notification.notificationText" textAlignment="CENTER" wrappingWidth="219.7" />

   <!-- Подключение стилей-->
   <stylesheets>
      <URL value="@components.css" />
      <URL value="@../styles/global.css" />
      <URL value="@../styles/variables.css" />
   </stylesheets>
   <effect>
      <DropShadow height="50.0" offsetY="4.0" radius="24.5" width="50.0">
         <color>
            <Color opacity="0.25" />
         </color>
      </DropShadow>
   </effect>

</Pane>
